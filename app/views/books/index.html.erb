
<div class="container">

<div class=" row">
  <div class="col-md-3">
  <%= render 'users/form',user:@user %>
  </div>
  <div class="offset-md-1  col-md-8">
    <h2>Books</h2>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book|%>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_profile_image(100,100)%>
            <% end %>
          </td>
          <td class="text-primary">
            <%= link_to book.title, book_path(book.id)%>
          </td>
          <td><%= book.body%> </td>
        </tr>
      <%end%>
    </table>
  </div>
</div>

</div>

