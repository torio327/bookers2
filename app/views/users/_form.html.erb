<div class="col-md-3 ">
  <% if @book.errors.any? %>
    <% if @book.errors.count==1%>
    <h3>
      <%= @book.errors.count%> error prohibited this obj from being saved:

    </h3>
    <%else%>
    <h3>
      <%= @book.errors.count%> errors prohibited this obj from being saved:
    </h3>
    <%end%>
    <ul>
      <% @book.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <%end%>
    </ul>
  <%end%>
  <div class="border-bottom">
    <h2>Users info</h2>
    <%= image_tag user.get_profile_image(150,150) %>
    <table class="table">
      <tbody>
        <tr >
          <th >name</th>
          <th>
            <%= user.name %>
          </th>
        </tr>
        <tr >
          <th >introduction</th>
          <th>
            <%= user.introduction%>
          </th>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary w-100" do%>
    <i class="fa-solid fa-user-gear"></i>
  <%end%>
  <h2 class="my-3">New book</h2>
  <%= form_with model:@book ,url:books_path,method: :post do |f|%>
    <label for="title" class="form-label">Title</label>
    <%= f.text_field :title ,class:"form-control",id:"title" %>
    <label for="body" class="form-label">Opinion</label>
    <%= f.text_area :body,class:"form-control",id:"body"%>
    <%= f.submit "Create Book",class:"btn btn-success my-3" %>
  <%end%>
</div>