<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "form",user:@user%>
    </div>
    <div class="offset-md-1 col-md-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|%>
            <tr>
              <td><%= image_tag user.get_profile_image(75,75) %></td>
              <td><%= user.name%></td>
              <td class="text-primary"><%= link_to "Show",user_path(user.id)%></td>
            </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
