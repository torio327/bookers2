<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <% if @book.errors.count==1%>
    <h3>
      <%= @book.errors.count%> error prohibited this obj from being saved:
    </h3>
  <%else%>
    <h3>
      <%= @book.errors.count%> errors prohibited this obj from being saved:
    </h3>
  <%end%>
  <ul>
    <% @book.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>
<div>
  <%= form_with model:@book,url:book_path(@book.id) , method: :patch  do |f|%>
    <div class="mb-4">
      <label for="title" class="form-label">Title</label>
      <%= f.text_field :title ,class:"form-control",id:"title"%>
    </div>
    <div class="mb-4">
      <label for="body" class="form-label">Opinion</label>
      <%= f.text_area :body,class:"form-control",id:"body"%>
    </div>
    <div class="mb-4">
      <%= f.submit "Update Book",class:"btn btn-success"%>
    </div>
  <%end%>
</div>
<div>
  <%= link_to "Show" , book_path(@book.id),class:"mr-1"%> | 
  <%= link_to "Back" , books_path,class:"ml-1"%>
</div>
